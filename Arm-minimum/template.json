{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters":{
      "projectName" : {
        "type": "string",
        "minLength": 3,
        "maxLength": 11,
        "defaultValue": "TestPr"
      },
      "location" :{
        "type": "string",
        "defaultValue":"[resourceGroup().location]"
      },
      "storageSKU": {
        "type": "string",
        "defaultValue": "Standard_LRS",
        "allowedValues": [
          "Standard_LRS",
          "Standard_GRS",
          "Standard_RAGRS",
          "Standard_ZRS",
          "Premium_LRS",
          "Premium_ZRS",
          "Standard_GZRS",
          "Standard_RAGZRS"
        ],
        "metadata": {
          "description": "Specify the storage account type."
        }
      },
      "storageSuffix" : {
        "type": "string",
        "minLength": 3,
        "maxLength": 6,
        "metadata" : {
          "description":"The prefix of the storage"
        }
      }
    },
    "variables":{
      "storageAccountName" :"[concat(parameters('projectName'), 'store', concat(parameters('storageSuffix')))]"
    },
    "resources": [
      {
        "type": "Microsoft.Storage/storageAccounts",
        "apiVersion": "2019-04-01",
        "name": "[variables('storageAccountName')]",
        "location":"[parameters('location')]",
        "kind": "BlobStorage",
        "sku": "[parameters('storageSKU')]"
      }
    ],
    "outputs":{}
  }